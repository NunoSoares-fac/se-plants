<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/luminosity"
        android:layout_width="183dp"
        android:layout_height="21dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="578dp"
        android:text="@{@string/label_luminosity(plant.luminosity)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="183dp"
        android:layout_height="25dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="614dp"
        android:text="@{@string/label_temperature(plant.temperature)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="189dp"
        android:layout_height="24dp"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="534dp"
        android:text="@{@string/label_humidity(plant.humidity)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_current_threshold"
        android:layout_width="291dp"
        android:layout_height="20dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="371dp"
        android:text="@{@string/label_current_threshold(plant.luminosityThreshold)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_actuator_active"
        android:layout_width="156dp"
        android:layout_height="20dp"
        android:layout_marginTop="384dp"
        android:layout_marginBottom="327dp"
        android:text="@{@string/label_actuator_active(plant.isActuatorActive)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_new_threshold"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginTop="434dp"
        android:layout_marginBottom="257dp"
        android:ems="10"
        android:hint="@string/hint_new_threshold"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <Button
        android:id="@+id/button_change_threshold"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:layout_marginTop="488dp"
        android:layout_marginBottom="191dp"
        android:text="@string/button_change_threshold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>